{
    "id":                               "ocho-proxy",
    "cpu":                              1,
    "mem":                              512,
    "env":{
        "ochopod_cluster":              "portal",
        "ochopod_debug":                "true",
        "MARATHON_MASTER":              "<YOUR MASTER IP #0>:8080,<YOUR MASTER IP #1>:8080..."
    },
    "container":{
        "type":"DOCKER",
        "docker":{
            "network":                  "BRIDGE",
            "image":                    "paugamo/marathon-ec2-portal",
            "forcePullImage":           true,
            "portMappings":[
                {
                    "hostPort":         9000,
                    "containerPort":    9000
                },
                {
                    "containerPort":    8080
                }
            ]
        },
        "volumes":[
            {
                "containerPath":        "/etc/mesos",
                "hostPath":             "/etc/mesos",
                "mode":                 "RO"
            },
            {
                "containerPath":        "/opt/mesosphere",
                "hostPath":             "/opt/mesosphere",
                "mode":                 "RO"
            }
        ]
    }
}